<form>
    <div class="form-group">
        <label for="titleText">Title</label>
        <input id="titleText" type="text" class="form-control" value="{{title}}">
    </div>
    <div class="form-group">
        <label for="descriptionText">Description</label>
        <textarea id="descriptionText" class="form-control" rows="3">{{description}}</textarea>
    </div>
    <button type="button" class="btn btn-default js-btn-cancel">Cancel</button>
    <button type="submit" class="btn btn-primary js-btn-submit">Submit</button>
</form>
